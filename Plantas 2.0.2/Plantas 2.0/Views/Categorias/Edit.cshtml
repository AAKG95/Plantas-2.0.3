@model Plantas_2._0.categoria

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Categoria</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div>
                <label class="col-md-2">Id</label>
            </div>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.idcategoria, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.idcategoria)
            </div>
        </div>
        <div class="form-group">
            <div>
                <label class="col-md-2">Descripcion</label>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.desc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.desc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div>
                <label class="col-md-2">Color</label>
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.color, new { htmlAttributes = new { @class = "form-control", type = "color" } })
                @Html.ValidationMessageFor(model => model.color, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div>
                <label class="col-md-2">Activo</label>
            </div>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.activa)
                    @Html.ValidationMessageFor(model => model.activa, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Categorias")
</div>