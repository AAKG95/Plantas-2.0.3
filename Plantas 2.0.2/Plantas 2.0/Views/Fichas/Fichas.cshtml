@model List<Plantas_2._0.ficha>

@{
    ViewBag.Title = "Fichas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Plugins/DataTables-1.10.9/media/js/jquery.js"></script>
<script src="~/Plugins/DataTables-1.10.9/media/js/jquery.dataTables.min.js"></script>
<script src="~/Scripts/JavaScript.js"></script>

<h2>Fichas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="table_id">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Fecha Creacion</th>
            <th>Link</th>
            <th>Activo</th>
            <th>Imagen</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {

            <tr>
                <td>@Html.DisplayFor(item => item[i].idficha)</td>
                <td>@Html.DisplayFor(item => item[i].nombre)</td>
                <td>@Html.DisplayFor(item => item[i].fecha_creacion)</td>
                <td><a href="https://@Html.DisplayFor(item => item[i].link)">@Html.DisplayFor(item => item[i].nombre) Ficha</a></td>
                <td>@Html.DisplayFor(item => item[i].activo)</td>
                @{
                    if (Model.ElementAt(i).img_url != "")
                    {
                        <td><img src="@Html.DisplayFor(x => x[i].img_url)" height=100 width=100></td>
                    }
                    else
                    {
                        <td>No Disponible</td>
                    }
                }
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.ElementAt(i).idficha }) |
                    @Html.ActionLink("Categorias", "Categorias", new { id = Model.ElementAt(i).idficha }) |
                    @Html.ActionLink("Delete", "Delete", new { id = Model.ElementAt(i).idficha }, new {@class="confirm"})
                </td>
            </tr>
        }
    </tbody>

</table>

<script> $(document).ready(function () { $('#table_id').DataTable();}); </script>